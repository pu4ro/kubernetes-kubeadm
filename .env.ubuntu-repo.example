# Ubuntu Local APT Repository Configuration
# Copy this file to .env.ubuntu-repo and configure your values

# Repository source and target directories
UBUNTU_REPO_SOURCE_DIR=/root/repo
UBUNTU_REPO_TARGET_DIR=/usr/local/repo

# APT repository configuration
UBUNTU_REPO_APT_LIST_FILE=/etc/apt/sources.list.d/local-repo.list
UBUNTU_REPO_APT_ENTRY="deb [trusted=yes] file:///usr/local/repo ./"

# Owner for repository directory (default: _apt)
# The _apt user is used by APT for security purposes
UBUNTU_REPO_OWNER=_apt

# ===================================================================
# Apache HTTP Server Configuration
# ===================================================================

# Apache package name
APACHE_PACKAGE=apache2

# Apache service name
APACHE_SERVICE=apache2

# Apache configuration
APACHE_DOCUMENT_ROOT=/var/www/html
APACHE_REPO_SYMLINK_NAME=ubuntu-repo
APACHE_PORT=8080

# Apache virtual host configuration file
APACHE_VHOST_FILE=/etc/apache2/sites-available/ubuntu-repo.conf
APACHE_VHOST_ENABLED=/etc/apache2/sites-enabled/ubuntu-repo.conf
