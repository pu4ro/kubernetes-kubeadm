# sysctl settings for Kubernetes networking
net.bridge.bridge-nf-call-iptables  = {{ bridge_nf_call_iptables | default(1) }}
net.bridge.bridge-nf-call-ip6tables = {{ bridge_nf_call_ip6tables | default(1) }}
net.ipv4.ip_forward                 = {{ ip_forward | default(1) }}
fs.inotify.max_user_watches=524288
fs.inotify.max_user_instances=512
fs.file-max = 100000

#grpc settings
net.core.wmem_max=12582912
net.core.rmem_max=12582912
net.ipv4.tcp_rmem=4096 87380 12582912
net.ipv4.tcp_wmem=4096 65536 12582912
net.ipv4.tcp_keepalive_time=1200
net.ipv4.tcp_keepalive_intvl=75
net.ipv4.tcp_keepalive_probes=9
net.ipv4.tcp_retries1=3
net.ipv4.tcp_retries2=15



