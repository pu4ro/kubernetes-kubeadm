# Nginx configuration for ISO repository
# Generated by Ansible

server {
    listen {{ yum_repo_web_port }};
    server_name {{ local_repo_server_ip }};

    root {{ iso_mount_point }};
    autoindex on;

    location /iso-repo {
        alias {{ iso_mount_point }};
        autoindex on;
    }

    access_log /var/log/nginx/iso-repo-access.log;
    error_log /var/log/nginx/iso-repo-error.log;
}
