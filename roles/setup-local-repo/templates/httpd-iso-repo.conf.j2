# Apache HTTP Server configuration for ISO repository
# Generated by Ansible

{% if yum_repo_web_port != 80 %}
Listen {{ yum_repo_web_port }}
{% endif %}

<VirtualHost *:{{ yum_repo_web_port }}>
    ServerName {{ local_repo_server_ip }}
    DocumentRoot {{ iso_mount_point }}

    <Directory {{ iso_mount_point }}>
        Options Indexes FollowSymLinks
        AllowOverride None
        Require all granted
    </Directory>

    Alias /iso-repo {{ iso_mount_point }}

    ErrorLog /var/log/httpd/iso-repo-error.log
    CustomLog /var/log/httpd/iso-repo-access.log combined
</VirtualHost>
