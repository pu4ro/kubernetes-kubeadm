# Nginx configuration for YUM repository directory
# Generated by Ansible

server {
    listen {{ yum_repo_web_port }};
    server_name {{ local_repo_server_ip }};

    root {{ yum_repo_directory }};
    autoindex on;

    location /yum-repo {
        alias {{ yum_repo_directory }};
        autoindex on;
    }

    access_log /var/log/nginx/yum-repo-access.log;
    error_log /var/log/nginx/yum-repo-error.log;
}
