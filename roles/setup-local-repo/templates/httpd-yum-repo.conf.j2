# Apache HTTP Server configuration for YUM repository directory
# Generated by Ansible

{% if yum_repo_web_port != 80 %}
Listen {{ yum_repo_web_port }}
{% endif %}

<VirtualHost *:{{ yum_repo_web_port }}>
    ServerName {{ local_repo_server_ip }}
    DocumentRoot {{ yum_repo_directory }}

    <Directory {{ yum_repo_directory }}>
        Options Indexes FollowSymLinks
        AllowOverride None
        Require all granted
    </Directory>

    Alias /yum-repo {{ yum_repo_directory }}

    ErrorLog /var/log/httpd/yum-repo-error.log
    CustomLog /var/log/httpd/yum-repo-access.log combined
</VirtualHost>
