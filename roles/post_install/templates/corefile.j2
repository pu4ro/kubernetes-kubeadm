apiVersion: v1
data: 
  Corefile: |
    .:53 {
        errors
        health {
           lameduck 5s
        }
        ready
        kubernetes cluster.local in-addr.arpa ip6.arpa {
           pods insecure
           fallthrough in-addr.arpa ip6.arpa
           ttl 30
        }
        prometheus :9153
        forward . /etc/resolv.conf {
           max_concurrent 1000
        }
        hosts {
          {{ wildcard_ip }} pubpypi.makina.rocks
          {{ wildcard_ip }} cr.makina.rocks
          {{ wildcard_ip }} harbor.{{ main_domain }}
          {{ wildcard_ip }} mlflow.{{ main_domain }}
          {{ wildcard_ip }} minio.{{ main_domain }}
          fallthrough
        }
    }
kind: ConfigMap
metadata:
  name: coredns
  namespace: kube-system
