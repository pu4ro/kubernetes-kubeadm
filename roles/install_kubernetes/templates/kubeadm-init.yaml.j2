{% set k8s_version_parts = kubernetes_version.split('.') %}
{% set k8s_minor = k8s_version_parts[1] | int %}
{% if k8s_minor >= 31 %}
apiVersion: kubeadm.k8s.io/v1beta4
{% else %}
apiVersion: kubeadm.k8s.io/v1beta3
{% endif %}
kind: InitConfiguration
localAPIEndpoint:
  advertiseAddress: {{ ansible_host }}
  bindPort: 6443
nodeRegistration:
  criSocket: unix:///var/run/containerd/containerd.sock
---
{% if k8s_minor >= 31 %}
apiVersion: kubeadm.k8s.io/v1beta4
{% else %}
apiVersion: kubeadm.k8s.io/v1beta3
{% endif %}
kind: ClusterConfiguration
clusterName: kubernetes
kubernetesVersion: "{{ kubernetes_version }}"
{% if kube_vip_address is defined %}
controlPlaneEndpoint: {{ kube_vip_address }}:{{ kube_vip_port }}
{% elif enable_domain_communication | default(false) and api_domain is defined %}
{# When domain-based communication is enabled without VIP, use api_domain #}
controlPlaneEndpoint: {{ api_domain }}:{{ kube_vip_port | default(6443) }}
{% endif %}
certificatesDir: /etc/kubernetes/pki
{% if enable_custom_image_repository | default(false) %}
imageRepository: {{ k8s_image_repository }}
dns:
  imageRepository: {{ coredns_image_repository }}
{% else %}
imageRepository: registry.k8s.io
{% endif %}
etcd:
  local:
    dataDir: /var/lib/etcd
{% if enable_domain_communication | default(false) %}
{# NOTE: Do NOT set initial-cluster, initial-cluster-state, initial-cluster-token here!
   kubeadm automatically manages etcd cluster membership.
   - First master: starts with single-node etcd
   - Additional masters: kubeadm join --control-plane automatically adds etcd members
   Setting initial-cluster with all masters causes quorum failure on first init. #}
    serverCertSANs:
      - "{{ api_domain }}"
{% for host in groups['masters'] %}
      - "{{ host }}.{{ domain_suffix }}"
{% endfor %}
    peerCertSANs:
{% for host in groups['masters'] %}
      - "{{ host }}.{{ domain_suffix }}"
{% endfor %}
{% endif %}
networking:
  dnsDomain: {{ dns_domain }}
  serviceSubnet: {{ service_subnet }}
  podSubnet: {{ pod_subnet }}
apiServer:
{% if k8s_minor >= 31 %}
  extraArgs:
  - name: authorization-mode
    value: Node,RBAC
{% else %}
  extraArgs:
    authorization-mode: Node,RBAC
{% endif %}
  certSANs:
{%- filter indent(width=4) %}

- 127.0.0.1
{% if kube_vip_address is defined %}
- {{ kube_vip_address }}
{% endif %}
{% for host in groups['masters'] %}
- {{ hostvars[host].ansible_host }}
{% endfor %}
{% if enable_domain_communication | default(false) %}
- {{ api_domain }}
{% for host in groups['masters'] %}
- {{ host }}.{{ domain_suffix }}
{% endfor %}
{% for san in extra_cert_sans | default([]) %}
- {{ san }}
{% endfor %}
{% endif %}
{%- endfilter %}
controllerManager: {}
scheduler: {}