# Local Registry Configuration
# Copy this file to .env.registry and configure your values

# Registry container settings
REGISTRY_IMAGE=registry:2
REGISTRY_IMAGE_TAR=/root/docker.tar.gz
REGISTRY_CONTAINER_NAME=local-registry

# Port configuration
REGISTRY_HOST_PORT=80
REGISTRY_CONTAINER_PORT=5000

# Data directory
REGISTRY_DATA_DIR=/opt/local-registry/data

# Additional nerdctl run arguments (space-separated)
# Example: REGISTRY_ADDITIONAL_ARGS="--env REGISTRY_STORAGE_DELETE_ENABLED=true"
REGISTRY_ADDITIONAL_ARGS=
